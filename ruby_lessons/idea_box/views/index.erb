<html>
	<head>
		<title>IdeaBox</title>
	</head>
	<body>
		<h1>IdeaBox!</h1>
		<form action='/' method='POST'>
			<p>Your Idea: <input type='text' name='idea_title'/></p>
			<textarea name='idea_description'></textarea><br/><br/>
			<input type='submit'/>
		</form>
		<h3>Existing Ideas</h3>
		<ul>
			<% ideas.each_with_index do |idea, id| %>
				<li>
				<%= idea.title %><br/>
				<%= idea.description %>
				<form action="/<%= id %>" method="POST">
        			<input type="hidden" name="_method" value="DELETE"> <!-- this is a trick that sends _method: DELETE to the server -->
        			<input type="submit" value="delete"/>
      			</form>
				</li>
			<% end %>
		</ul>
	</body>
</html>